<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baymax.exam.center.mapper.QuestionMapper">
    <resultMap id="questionInfo" autoMapping="true" type="com.baymax.exam.center.vo.QuestionInfoVo">
        <id property="id" column="id"/>
        <collection property="topicItems" javaType="java.util.List" ofType="com.baymax.exam.center.model.QuestionItem">
            <id property="id" column="item_id"/>
            <result property="content" column="item_content"/>
            <result property="correct" column="item_correct"/>
        </collection>
    </resultMap>
    <select id="questionInfoList" resultMap="questionInfo">
        SELECT
            q.*,
            qi.id AS item_id,
            qi.content AS item_content,
            qi.correct AS item_correct
        FROM
            eq_question q
                JOIN eq_question_item qi ON (q.id = qi.question_id)
            ${ew.customSqlSegment}
    </select>
</mapper>
